#!/bin/sh

DEPS=(
	Common.hpp
	Common.cpp
	Action.hpp
	Action.cpp
	Agent.hpp
	Agent.cpp
	State.hpp
	State.cpp
	StatSystem.hpp
	StatSystem.cpp
	RandomAgent.hpp
	RandomAgent.cpp
	FlatMCTSAgent.hpp
	FlatMCTSAgent.cpp
	MCTSAgentBase.hpp
	MCTSAgentBase.cpp
	MCTSAgent.hpp
	MCTSAgent.cpp
	MCTSAgentWithMAST.hpp
	MCTSAgentWithMAST.cpp
	TicTacToe.hpp
	TicTacToe.cpp
	UltimateTicTacToe.hpp
	UltimateTicTacToe.cpp
	TicTacToeRealAgent.hpp
	TicTacToeRealAgent.cpp
	GameRunner.hpp
	GameRunner.cpp
	CGAgent.hpp
	CGAgent.cpp
	CGRunner.hpp
	CGRunner.cpp
	main.cpp
)

output="CGSolver"
cat "${DEPS[@]}" > $output.cpp
sed -i -e '/HPP/d' -e '/include "/d' $output.cpp
make $output
rm $output
clipcp $output.cpp
